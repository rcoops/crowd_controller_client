<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_swipe_container"
    android:name="me.cooper.rick.crowdcontrollerclient.fragment.group.GroupFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.cooper.rick.crowdcontrollerclient.fragment.group.GroupFragment">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_horizontal_margin"
        android:layout_marginRight="@dimen/list_horizontal_margin"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_list_item"
        android:background="@color/primary" />
</android.support.v4.widget.SwipeRefreshLayout>
